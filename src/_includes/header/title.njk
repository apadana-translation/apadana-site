{# Poem title (and chapter title if appropriate) #}
{% if category == 'chapter-3' or category == 'chapter-4' %}
  <h5 class="header__title"><strong>{{ categories[category].name }} /</strong> {{ order | default("1") }}. {{ title | truncate(35) }}</h5>
{% else %}
  <h5 class="header__title"><strong>{{ title }}</strong></h5>
{% endif %}
